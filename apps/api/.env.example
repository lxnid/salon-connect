# Database
# For local development, ensure Postgres is running and credentials are correct
# Example for local: postgresql://username:password@localhost:5432/salon_connect?schema=public
# On Render, DATABASE_URL will be injected automatically from the managed PostgreSQL database
DATABASE_URL="postgresql://username:password@localhost:5432/salon_connect?schema=public"

# JWT
# Change this in production; on Render, it is generated automatically via render.yaml
JWT_SECRET="salon-connect-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# CORS
# Comma-separated list of allowed origins. In dev, default is http://localhost:3000
# On Render, this is set from the frontend service URL automatically
ALLOWED_ORIGINS="http://localhost:3000"

# Environment
NODE_ENV="development"
PORT=5000